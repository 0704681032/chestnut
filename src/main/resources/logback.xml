<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>info.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}|%logger{1}|%msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="INFO" />
    </root>
</configuration>
